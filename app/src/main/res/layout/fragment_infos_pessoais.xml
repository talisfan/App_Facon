<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.FragmentInfosPessoais"
    android:background="@color/gray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fotoP"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:foreground="@drawable/border_rounded"
                android:scaleType="centerCrop"
                android:src="@drawable/add_foto" />

            <TextView
                android:id="@+id/nomeP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="NOME"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dtNascimentoP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Nascimento: 29/03/2000"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/emailP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="E-mail: email@email.com"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/telCellP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tell Cel: (11) 91234-5678"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/telFixoP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tell Fixo: (11) 1234-5678"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/editInfos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/lbl_editar"
                android:textColor="@color/links" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/lbl_enderecoAtual"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/endCepP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Cep: 06332-190"
                android:textSize="19dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/endRuaP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Rua de exemplo"
                android:textSize="19dp" />

                <TextView
                    android:id="@+id/endNumP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=" - NÂº"
                    android:textSize="19dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/endBairroP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Bairro de exemplo"
                android:textSize="19dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/endCidadeP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cidade: cidade exemplo - "
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/endEstadoP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado"
                    android:textSize="19dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/editEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/lbl_editar"
                android:textColor="@color/links" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>