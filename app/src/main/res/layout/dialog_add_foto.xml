<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">


    <ImageView
        android:id="@+id/openCam"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/border_blue"
        android:padding="10dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintEnd_toStartOf="@+id/openGalery"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tirar Foto"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/openCam"
        app:layout_constraintStart_toStartOf="@+id/openCam"
        app:layout_constraintTop_toBottomOf="@+id/openCam" />

    <ImageView
        android:id="@+id/openGalery"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/border_blue"
        android:padding="10dp"
        android:src="@drawable/ic_menu_gallery"
        app:layout_constraintBottom_toBottomOf="@+id/openCam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/openCam"
        app:layout_constraintTop_toTopOf="@+id/openCam" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir Galeria"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/openGalery"
        app:layout_constraintStart_toStartOf="@+id/openGalery"
        app:layout_constraintTop_toBottomOf="@+id/openGalery" />


</androidx.constraintlayout.widget.ConstraintLayout>